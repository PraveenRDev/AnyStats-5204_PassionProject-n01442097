 @model AnyStats___5204_PassionProject_n01442097.Models.StatDto

@{
    ViewBag.Title = "Create";
}
<h2>Create Statistics</h2>
<div class="btn btn-default submit">
    @Html.ActionLink("Back to List", "List")
</div>
<form method="post" action="Create">
    <div class="form-group">
        <label for="name">Stat Name</label>
        <input type="text" id="name" name="StatName" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="StatDescription" class="form-control" required></textarea>
    </div>

    <div class="form-group">
        <label for="xaxis">X-Axis Name</label>
        <input type="text" id="xaxis" name="XAxis" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="yaxis">Y-Axis Name</label>
        <input type="text" id="yaxis" name="YAxis" class="form-control" required/>
    </div>

    <div class="form-group">
        <label for="public">Public</label>
        <input type="checkbox" id="public" value="true" name="isPublic"/>
    </div>

    <div id="divCont">
        <div class="input-group">
            <input type="text" name="XValue" class="form-control" placeholder="x-value" required />
            <span class="input-group-btn" style="width:0px;"></span>
            <input type="number" step="0.001" class="form-control" name="YValue" placeholder="y-value" required />
            <span class="input-group-btn" style="width:10px;"></span>
            <input type="button" onclick="AddTextBox()" class="form-control" value="Add Coordinates" />
        </div>
    </div>
    <input type="submit" value="Create" class="btn btn-success submit"/>
</form>
<script src="~/Scripts/stats.js"></script>